<nav class="wrapper sticky-top" >
  <div class="navbar-content container">
    <div id="logo-item">
      <%= link_to root_path do %>
        <%= image_tag("logo_holdies.svg", size: "130") %>
      <% end %>
    </div>
    <% if user_signed_in? %>
      <span>
        <%= link_to new_user_movie_path(current_user) do %>
          <i class="fas fa-plus-circle" style="font-size: 25px;"></i>
        <% end %>
      </span>
      <span>
        <%= link_to "MES FAVORIS", user_favorites_path(current_user), id: "navbar-favorite-link" %>
      </span>
      <div class="profile-link">
        <div class="dropdown">
          <div data-toggle="dropdown" class="dropdown-toggle">
            <% if current_user.avatar.present? %>
              <%= cl_image_tag(current_user.avatar, height: 50, width: 50, crop: :fill, class: "navbar-avatar") %>
            <% else %>
              <%= image_tag("default-avatar.png", height: 60, width: 60, crop: :fill)  %>
            <% end %>
          </div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
            <%= link_to "Mon compte", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Ma filmothèque", own_movies_path(current_user), class: "dropdown-item"  %>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item"  %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="button-ternary"><%= link_to "Log In", new_user_session_path %></div>
      <div class="button-secondary"><%= link_to "Sign Up", new_user_registration_path %></div>
    <% end %>
  </div>
  <div id="navbar-movies-links-color">
    <div class="navbar-movies-links container">
      <h4><%= link_to "Nouveautés", news_path %></h4>
      <h4><%= link_to "Tous les films", movies_path %></h4>
      <%= render 'shared/navbar-search' %>
    </div>
  </div>
</nav>
